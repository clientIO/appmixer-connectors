{
    "actions": [
        {
            "title": "Create a Design",
            "description": "Creates a new design.",
            "type": "action",
            "documentation": "https://www.canva.dev/docs/connect/#create-a-design",
            "endpointUrl": "https://api.canva.com/v1/designs",
            "apiBaseUrl": "https://api.canva.com/v1",
            "method": "POST",
            "sampleResponse": {
                "id": "design_12345",
                "name": "New Design",
                "created_at": "2024-01-01T12:00:00Z"
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the design"
                    },
                    "template_id": {
                        "type": "string",
                        "description": "Optional template ID to base the design on"
                    },
                    "dimensions": {
                        "type": "object",
                        "properties": {
                            "width": {
                                "type": "integer",
                                "description": "Width in pixels"
                            },
                            "height": {
                                "type": "integer",
                                "description": "Height in pixels"
                            }
                        },
                        "description": "Dimensions of the design"
                    }
                },
                "required": [
                    "name"
                ]
            }
        },
        {
            "title": "Create a Folder",
            "description": "Creates a new folder.",
            "type": "action",
            "documentation": "https://www.canva.dev/docs/connect/#create-a-folder",
            "endpointUrl": "https://api.canva.com/v1/folders",
            "apiBaseUrl": "https://api.canva.com/v1",
            "method": "POST",
            "sampleResponse": {
                "id": "folder_12345",
                "name": "New Folder",
                "created_at": "2024-01-01T12:00:00Z"
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the folder"
                    },
                    "parent_folder_id": {
                        "type": "string",
                        "description": "ID of the parent folder, if any"
                    }
                },
                "required": [
                    "name"
                ]
            }
        },
        {
            "title": "Get a Folder",
            "description": "Retrieves details about an existing folder.",
            "type": "action",
            "documentation": "https://www.canva.dev/docs/connect/#get-a-folder",
            "endpointUrl": "https://api.canva.com/v1/folders/{folder_id}",
            "apiBaseUrl": "https://api.canva.com/v1",
            "method": "GET",
            "sampleResponse": {
                "id": "folder_12345",
                "name": "Folder Name",
                "created_at": "2024-01-01T12:00:00Z"
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "folder_id": {
                        "type": "string",
                        "description": "ID of the folder to retrieve"
                    }
                },
                "required": [
                    "folder_id"
                ]
            }
        },
        {
            "title": "Make an API Call",
            "description": "Performs an arbitrary authorized API call.",
            "type": "action",
            "documentation": "https://www.canva.dev/docs/connect/#make-an-api-call",
            "endpointUrl": "https://api.canva.com/v1/{path}",
            "apiBaseUrl": "https://api.canva.com/v1",
            "method": "POST",
            "sampleResponse": {},
            "inputSchema": {
                "type": "object",
                "properties": {
                    "path": {
                        "type": "string",
                        "description": "API path to call, e.g. 'designs'"
                    },
                    "method": {
                        "type": "string",
                        "enum": [
                            "GET",
                            "POST",
                            "PUT",
                            "PATCH",
                            "DELETE"
                        ],
                        "description": "HTTP method to use"
                    },
                    "body": {
                        "type": "object",
                        "description": "Request body for the API call"
                    },
                    "query_params": {
                        "type": "object",
                        "description": "Query parameters for the API call"
                    }
                },
                "required": [
                    "path",
                    "method"
                ]
            }
        },
        {
            "title": "Move a Folder Item",
            "description": "Moves items from one folder to another.",
            "type": "action",
            "documentation": "https://www.canva.dev/docs/connect/#move-a-folder-item",
            "endpointUrl": "https://api.canva.com/v1/folder-items/move",
            "apiBaseUrl": "https://api.canva.com/v1",
            "method": "POST",
            "sampleResponse": {
                "success": true
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "item_id": {
                        "type": "string",
                        "description": "ID of the item to move"
                    },
                    "source_folder_id": {
                        "type": "string",
                        "description": "ID of the source folder"
                    },
                    "destination_folder_id": {
                        "type": "string",
                        "description": "ID of the destination folder"
                    }
                },
                "required": [
                    "item_id",
                    "source_folder_id",
                    "destination_folder_id"
                ]
            }
        },
        {
            "title": "Upload an Image",
            "description": "Uploads an image to a userâ€™s content library. When specifying an image that already exists, it's renamed.",
            "type": "action",
            "documentation": "https://www.canva.dev/docs/connect/#upload-an-image",
            "endpointUrl": "https://api.canva.com/v1/images/upload",
            "apiBaseUrl": "https://api.canva.com/v1",
            "method": "POST",
            "sampleResponse": {
                "id": "image_12345",
                "url": "https://cdn.canva.com/image_12345.jpg"
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "file_name": {
                        "type": "string",
                        "description": "Name of the image file"
                    },
                    "file_data": {
                        "type": "string",
                        "description": "Base64 encoded image data"
                    },
                    "folder_id": {
                        "type": "string",
                        "description": "ID of the folder to upload the image into"
                    }
                },
                "required": [
                    "file_name",
                    "file_data"
                ]
            }
        }
    ],
    "authentication": {
        "type": "oauth2",
        "authUrl": "https://accounts.canva.com/oauth2/auth",
        "tokenUrl": "https://accounts.canva.com/oauth2/token",
        "profileInfoUrl": "https://api.canva.com/v1/users/me"
    },
    "serviceJson": {
        "name": "appmixer.canva",
        "label": "Canva",
        "category": "applications",
        "description": "Connect Canva with your favorite apps to create visual automated workflows and automate design tasks.",
        "version": "1.0.0",
        "icon": "https://static.canva.com/web/favicon.ico"
    }
}