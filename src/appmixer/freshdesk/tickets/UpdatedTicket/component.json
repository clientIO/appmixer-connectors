{
    "name": "appmixer.freshdesk.tickets.UpdatedTicket",
    "author": "Camilo Manrique <camilo@client.io>",
    "icon": "data:image/svg+xml;base64,",
    "description": "This trigger fires every time a ticket is updated on Freshdesk.",
    "private": false,
    "tick": true,
    "auth": {
        "service": "appmixer:freshdesk"
    },
    "quota": {
        "manager": "appmixer:freshdesk",
        "resources": "tickets.polling",
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "properties": {
        "schema": {
            "type": "object",
            "properties": {
                "embed": {
                    "type": "array"
                }
            }
        },
        "inspector": {
            "inputs": {
                "embed": {
                    "type": "multiselect",
                    "label": "Embed fields",
                    "index": 1,
                    "tooltip": "Additional fields to include on incoming tickets. Note that each additional field will spend additional API credits",
                    "options": [
                        { "label": "requester", "value": "requester" },
                        { "label": "description", "value": "description" }
                    ]
                }
            }
        }
    },
    "outPorts": [
        {
            "name": "ticket",
            "source": {
                "url": "/component/appmixer/freshdesk/tickets/GenerateTicketsOutput?outPort=out",
                "data": {
                    "properties": {
                        "operation": 3,
                        "embedFields": "properties/embed"
                    },
                    "transform": "./GenerateTicketsOutput#triggerOutputOptions"
                }
            }
        }
    ]
}
