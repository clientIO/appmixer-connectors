{
    "name": "appmixer.google.drive.CreateFolder",
    "author": "David Durman <david@client.io>",
    "description": "Create a new folder in your drive.",
    "private": false,
    "version": "1.0.2",
    "auth": {
        "service": "appmixer:google",
        "scope": [
            "https://www.googleapis.com/auth/drive",
            "https://www.googleapis.com/auth/drive.appdata",
            "https://www.googleapis.com/auth/drive.file"
        ]
    },
    "quota": {
        "manager": "appmixer:google:drive",
        "resources": "readandwrite",
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "folderName": {
                        "type": "string"
                    },
                    "folderLocation": {
                        "oneOf": [
                            { "type": "string" },
                            { "type": "object" }
                        ]
                    },
                    "useExisting": {
                        "type": "boolean"
                    }
                }
            },
            "inspector": {
                "inputs": {
                    "folderName": {
                        "type": "text",
                        "index": 1,
                        "label": "New Folder Name",
                        "tooltip": "Enter the name for your new folder."
                    },
                    "folderLocation": {
                        "type": "googlepicker",
                        "index": 2,
                        "label": "New Folder Location",
                        "placeholder": "Choose a folder...",
                        "tooltip": "Select the parent folder for your new folder. Leave blank to create the folder in the root of your drive.",
                        "view": "FOLDERS"
                    },
                    "useExisting": {
                        "type": "toggle",
                        "index": 3,
                        "defaultValue": true,
                        "label": "Use Existing",
                        "tooltip": "If a folder with the same name already exists, return the existing folder instead of creating a new one."
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Folder ID", "value": "folderId" },
                { "label": "Folder Name", "value": "folderName" },
                { "label": "Mime Type", "value": "mimeType" },
                { "label": "Web Link", "value": "webViewLink" },
                { "label": "Time Created", "value": "createdTime" }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
