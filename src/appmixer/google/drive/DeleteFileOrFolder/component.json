{
    "name": "appmixer.google.drive.DeleteFileOrFolder",
    "author": "David Durman <david@client.io>",
    "description": "Delete a file or folder from your Google Drive.",
    "private": false,
    "auth": {
        "service": "appmixer:google",
        "scope": [
            "https://www.googleapis.com/auth/drive",
            "https://www.googleapis.com/auth/drive.appdata",
            "https://www.googleapis.com/auth/drive.file"
        ]
    },
    "quota": {
        "manager": "appmixer:google:drive",
        "resources": "readandwrite",
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "fileId": {
                        "oneOf": [
                            { "type": "string" },
                            { "type": "object" }
                        ]
                    }
                },
                "required": ["fileId"]
            },
            "inspector": {
                "inputs": {
                    "fileId": {
                        "type": "googlepicker",
                        "view": ["DOCS", "FOLDERS"],
                        "index": 1,
                        "label": "Google Drive File or Folder ID",
                        "tooltip": "The ID of the Google Drive file or folder."
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Google Drive File or Folder ID", "value": "googleDriveFileId" }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
