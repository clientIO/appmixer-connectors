{
    "name": "appmixer.google.gmail.FindEmails",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Finds emails in Gmail based on a search query. You can retrieve emails as a single item, multiple items, or save them directly to a file. Each message resource contains only the Email ID and Thread ID. To get detailed information about specific emails, use the Get Email component. For guidance on search queries, refer to the <a href=\"https://support.google.com/mail/answer/7190?hl=en\" target=\"_blank\">Gmail Search Documentation</a>.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:google:gmail",
        "scope": [
            "https://www.googleapis.com/auth/gmail.readonly"
        ]
    },
    "quota": {
        "manager": "appmixer:google:gmail",
        "maxWait": 5000,
        "resources": "messages.polling",
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "inPorts": [
        {
            "name": "in",
            "inspector": {
                "inputs": {
                    "query": {
                        "type": "text",
                        "label": "Search Query",
                        "index": 1,
                        "tooltip": "The search query to find emails."
                    },
                    "outputType": {
                        "type": "select",
                        "label": "Output Type",
                        "index": 2,
                        "tooltip": "Choose whether you want to receive the result set as one complete list of emails, one email item at a time, stream the email items to a file or the first email out of the result.",
                        "defaultValue": "file",
                        "options": [
                            { 
                                "label": "First Email",
                                "value": "first"
                            },
                            {
                                "label": "One at a time",
                                "value": "email"
                            },
                            {
                                "label": "All at once",
                                "value": "emails"
                            },
                            {
                                "label": "Save to file",
                                "value": "file"
                            }
                        ]
                    },
                    "limit": {
                        "type": "number",
                        "label": "Limit",
                        "index": 3,
                        "tooltip": "The number of results you want to retrieve.",
                        "defaultValue": 100,
                        "when": { 
                            "ne": { 
                                "./outputType": "first" 
                            }
                        }
                    }
                }
            },
            "schema": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string"
                    },
                    "outputType": {
                        "type": "string"
                    },
                    "limit": {
                        "type": "number"
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "source": {
                "url": "/component/appmixer/google/gmail/FindEmails?outPort=out",
                "data": {
                    "properties": {
                        "generateOutputPortOptions": true
                    },
                    "messages": {
                        "in/outputType": "inputs/in/outputType",
                        "in/limit": "inputs/in/limit"
                    }
                }
            }
        },
        {
            "name": "notFound"
        }
    
    ],
    "icon": "data:image/svg+xml;base64,"
}
