{
    "name": "appmixer.google.gmail.GetEmail",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Retrieves an email from your Gmail.",
    "private": false,
    "version": "1.2.0",
    "dependencies": {
        "module": "1.2.0"
    },
    "auth": {
        "service": "appmixer:google:gmail",
        "scope": ["https://www.googleapis.com/auth/gmail.readonly"]
    },
    "quota": {
        "manager": "appmixer:google:gmail",
        "maxWait": 5000,
        "resources": "messages.get",
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "emailId": {
                        "type": "string"
                    }
                },
                "required": ["emailId"]
            },
            "inspector": {
                "inputs": {
                    "emailId": {
                        "type": "text",
                        "index": 1,
                        "label": "Email ID",
                        "tooltip": "Select an email from the list or insert and email ID to get the email's details.",
                        "source": { 
                            "url": "/component/appmixer/google/gmail/ListEmails?outPort=out",
                            "data": {
                                "messages": {
                                    "in/limit": "20",
                                    "in/outputType": "emails"
                                },
                                "properties": {
                                    "sendWholeArray": true,
                                    "variableFetch": true
                                },
                                "transform": "./ListEmails#emailsToSelectArray"
                            }
                        }
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Email ID",
                    "value": "id"
                },
                {
                    "label": "Thread ID",
                    "value": "threadId"
                },
                {
                    "label": "Label IDs",
                    "value": "labelIds"
                },
                {
                    "label": "Snippet",
                    "value": "snippet"
                },
                {
                    "label": "SizeEstimate",
                    "value": "sizeEstimate"
                },
                {
                    "label": "Date",
                    "value": "payload.date"
                },
                {
                    "label": "From",
                    "value": "payload.from.[0].address"
                },
                {
                    "label": "To",
                    "value": "payload.to.[0].address"
                },
                {
                    "label": "Subject",
                    "value": "payload.subject"
                },
                {
                    "label": "Body",
                    "value": "payload.text"
                },
                {
                    "label": "HTML",
                    "value": "payload.html"
                },
                {
                    "label": "Attachments",
                    "value": "attachments",
                    "schema": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "title": "Attachment ID"
                                },
                                "filename": {
                                    "type": "string",
                                    "title": "Attachment Name"
                                },
                                "size": {
                                    "type": "string",
                                    "title": "Attachment Size"
                                },
                                "mimeType": {
                                    "type": "string",
                                    "title": "Attachment MIME Type"
                                }
                            }
                        }
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
