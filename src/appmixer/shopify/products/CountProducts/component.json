{
    "name": "appmixer.shopify.products.CountProducts",
    "author": "Jimoh Damilola <jimoh@client.io>",
    "description": "When triggered, retrieves a count of all products.",
    "icon": "data:image/svg+xml;base64,",
    "private": false,
    "auth": {
        "service": "appmixer:shopify",
        "scope": [
            "read_products"
        ]
    },
    "quota": {
        "manager": "appmixer:shopify",
        "resources": "requests",
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "inPorts": [ 
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "vendor": { "type": "string" },
                    "product_type": { "type": "string" },
                    "collection_id": { "type": "string" },
                    "created_at_min": { "type": "string" },
                    "created_at_max": { "type": "string" },
                    "updated_at_min": { "type": "string" },
                    "updated_at_max": { "type": "string" },
                    "published_at_min": { "type": "string" },
                    "published_at_max": { "type": "string" },
                    "published_status": { "type": "string" }
                }
            },
            "inspector": {
                "inputs": {
                    "vendor": {
                        "type": "text",
                        "label": "Product Vendor",                  
                        "index": 1,
                        "tooltip": "Filter products by product vendor."
                    },
                    "product_type": {
                        "type": "text",
                        "label": "Product Type",                  
                        "index": 2,
                        "tooltip": "Filter products by product type."
                    },
                    "collection_id": {
                        "type": "text",
                        "label": "Collection ID",                  
                        "index": 3,
                        "tooltip": "Filter products by collection ID."
                    },
                    "created_at_min": {
                        "type": "date-time",
                        "label": "Min Date Created",                  
                        "index": 4,
                        "tooltip": "Filter products created after date."
                    },
                    "created_at_max": {
                        "type": "date-time",
                        "label": "Max Date Created",                  
                        "index": 5,
                        "tooltip": "Filter products created before date."
                    },
                    "updated_at_min": {
                        "type": "date-time",
                        "label": "Min Date Updated",                  
                        "index": 6,
                        "tooltip": "Filter products last updated after date."
                    },
                    "updated_at_max": {
                        "type": "date-time",
                        "label": "Max Date Updated",                  
                        "index": 7,
                        "tooltip": "Filter products last updated before date."
                    },
                    "published_at_min": {
                        "type": "date-time",
                        "label": "Min Date Published",                  
                        "index": 8,
                        "tooltip": "Filter products published after date."
                    },
                    "published_at_max": {
                        "type": "date-time",
                        "label": "Max Date Published",                  
                        "index": 9,
                        "tooltip": "Filter products published before date."
                    },
                    "published_status": {
                        "type": "select",
                        "label": "Published Status",
                        "index": 10,
                        "options": [
                            { "content": "Any", "value": "any" },
                            { "content": "Published", "value": "published" },
                            { "content": "Unpublished", "value": "unpublished" }
                        ],
                        "tooltip": "Filter products by their published status"
                    }
                }
            }
        } 
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Total Number of Products", "value": "count" }
            ]
        }
    ]
}
