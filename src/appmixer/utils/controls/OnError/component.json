{
    "name": "appmixer.utils.controls.OnError",
    "author": "Martin Krčmář <martin@client.io>",
    "description": "This trigger fires when there is an error in the flow.",
    "tick": true,
    "version": "1.1.0",
    "state": {
        "persistent": true
    },
    "properties": {
        "schema": {
            "type": "object",
            "properties": {
                "limit": {
                    "type": "number"
                }
            }
        },
        "inspector": {
            "inputs": {
                "limit": {
                    "type": "number",
                    "label": "Limit",
                    "index": 1,
                    "defualtValue": 100,
                    "tooltip": "Limit the number of errors to display."
                    
                }
            }
        }
    },
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Timestamp", "value": "gridTimestamp" },
                { "label": "Message", "value": "msg" },
                { "label": "Error Details", "value":  "err" },
                { "label": "Component ID", "value": "componentId" },
                { "label": "Component Type", "value": "componentType" },
                { "label": "Component Label", "value": "componentLabel" },
                { "label": "Flow Name", "value": "flowName" },
                { "label": "Input Message(s)", "value": "inputMessages" }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
