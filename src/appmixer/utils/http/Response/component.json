{
    "name": "appmixer.utils.http.Response",
    "author": "Jimoh Damilola <jimoh@client.io>",
    "description": "This component returns HTTP response to Webhook",
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "body": {
                        "oneOf": [
                            { "type": "string" },
                            { "type": "object" }
                        ]
                    },
                    "statusCode": { "type": "number" },
                    "headers": {
                        "oneOf": [
                            { "type": "string" },
                            { "type": "object" }
                        ]
                    }
                }
            },
            "inspector": {
                "inputs": {
                    "body": {
                        "type": "textarea",
                        "index": 1,
                        "label" : "Body",
                        "tooltip": "Data to be send as response body."
                    },
                    "statusCode": {
                        "type": "number",
                        "index": 2,
                        "label" : "Status Code",
                        "tooltip": "The status code of the response."
                    },
                    "headers": {
                        "type": "textarea",
                        "index": 3,
                        "label" : "Headers",
                        "tooltip": "The headers object associated with the response."
                    }
                }
            }
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
