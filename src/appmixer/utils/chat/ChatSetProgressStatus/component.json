{
    "name": "appmixer.utils.chat.ChatSetProgressStatus",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Set a progress status on a chat.",
    "inPorts": [{
        "name": "in",
        "schema": {
            "type": "object",
            "properties": {
                "threadId": { "type": "string" },
                "content": { "type": "string" }
            }
        },
        "inspector": {
            "inputs": {
                "threadId": {
                    "type": "text",
                    "index": 1,
                    "label": "Thread ID",
                    "tooltip": "Use the Thread ID from the 'Chat Trigger'."
                },
                "content": {
                    "type": "textarea",
                    "index": 2,
                    "label": "Progress Status",
                    "tooltip": "The status message to set on the chat. This will be shown to the user as a temporary progress status. For example 'Thinking...'."
                }
            }
        }
    }],
    "outPorts": [
        {
            "name": "out"
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
