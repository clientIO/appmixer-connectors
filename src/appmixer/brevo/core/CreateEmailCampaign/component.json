{
    "name": "appmixer.brevo.core.CreateEmailCampaign",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Creates a new campaign.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:brevo"
    },
    "quota": {
        "manager": "appmixer:brevo",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the campaign"
                    },
                    "subject": {
                        "type": "string",
                        "description": "Subject of the email"
                    },
                    "sender": {
                        "type": "object",
                        "description": "Sender details with name and email"
                    },
                    "type": {
                        "type": "string",
                        "description": "Type of campaign"
                    },
                    "htmlContent": {
                        "type": "string",
                        "description": "HTML content of the email"
                    },
                    "scheduledAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Scheduled date/time for sending"
                    },
                    "recipients": {
                        "type": "object",
                        "description": "Recipients details including list IDs"
                    }
                }
            },
            "inspector": {
                "inputs": {
                    "name": {
                        "type": "text",
                        "tooltip": "Name of the campaign",
                        "label": "Name",
                        "index": 0
                    },
                    "subject": {
                        "type": "text",
                        "tooltip": "Subject of the email",
                        "label": "Subject",
                        "index": 1
                    },
                    "sender": {
                        "type": "text",
                        "tooltip": "Sender details with name and email",
                        "label": "Sender",
                        "index": 2
                    },
                    "type": {
                        "type": "text",
                        "tooltip": "Type of campaign",
                        "label": "Type",
                        "index": 3
                    },
                    "htmlContent": {
                        "type": "text",
                        "tooltip": "HTML content of the email",
                        "label": "HtmlContent",
                        "index": 4
                    },
                    "scheduledAt": {
                        "type": "text",
                        "tooltip": "Scheduled date/time for sending",
                        "label": "ScheduledAt",
                        "index": 5
                    },
                    "recipients": {
                        "type": "text",
                        "tooltip": "Recipients details including list IDs",
                        "label": "Recipients",
                        "index": 6
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Id",
                    "value": "id",
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "label": "Name",
                    "value": "name",
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
