{
    "name": "appmixer.microsoft.mail.UpdateCategory",
    "author": "Harsha Surisetty <harsha@client.io>",
    "description": "Updates the categories assigned to an email in your mailbox.",
    "auth": {
        "service": "appmixer:microsoft",
        "scope": ["Mail.ReadWrite"]
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "emailId": {
                        "type": "string"
                    },
                    "categories": {
                        "type": "array",
                        "items": {"type": "string"}
                    }
                    
                },
                "required": ["emailId"]
            },
            "inspector": {
                "inputs": {
                    "emailId": {
                        "type": "text",
                        "index": 1,
                        "label": "Email ID",
                        "tooltip": "Email identifier for the message to be marked as unread."
                    },
                    "categories": {
                        "type": "multiselect",
                        "index": 2,
                        "label": "Categories",
                        "tooltip": "Categories to be updated(comma separated eg: 'Blue category,Red category').",
                        "source": { 
                            "url": "/component/appmixer/microsoft/mail/ListCategories?outPort=out",
                            "data": {
                                "properties": { "sendWholeArray": true },
                                "transform": "./ListCategories#categoriesToSelectArray"
                            }
                        }
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "result", "value": "result" }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
