{
  "name": "appmixer.googleforms.core.MakeAPICall",
  "label": "Make API Call",
  "description": "Performs an arbitrary authorized API call to Google Forms API.",
  "author": "Appmixer <info@appmixer.com>",
  "version": "1.0.0",
  "auth": {
    "service": "appmixer:googleforms",
    "scope": [
      "https://www.googleapis.com/auth/forms.body",
      "https://www.googleapis.com/auth/forms.body.readonly",
      "https://www.googleapis.com/auth/forms.responses.readonly",
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/drive.readonly"
    ]
  },
  "quota": {
    "manager": "appmixer:googleforms",
    "resources": "forms.api",
    "scope": {
      "userId": "{{userId}}"
    }
  },
  "inPorts": [
    {
      "name": "in",
      "inspector": {
        "inputs": {
          "method": {
            "type": "select",
            "label": "HTTP Method",
            "tooltip": "The HTTP method to use for the request",
            "index": 1,
            "required": true,
            "options": [
              { "label": "GET", "value": "GET" },
              { "label": "POST", "value": "POST" },
              { "label": "PUT", "value": "PUT" },
              { "label": "PATCH", "value": "PATCH" },
              { "label": "DELETE", "value": "DELETE" }
            ]
          },
          "url": {
            "type": "text",
            "label": "API Endpoint URL",
            "tooltip": "The full URL of the API endpoint (e.g., https://forms.googleapis.com/v1/forms/{formId})",
            "index": 2,
            "required": true
          },
          "headers": {
            "type": "textarea",
            "label": "Headers",
            "tooltip": "Additional headers in JSON format (optional). Authorization header is added automatically.",
            "index": 3
          },
          "body": {
            "type": "textarea",
            "label": "Request Body",
            "tooltip": "Request body in JSON format (for POST, PUT, PATCH methods)",
            "index": 4
          },
          "queryParams": {
            "type": "textarea",
            "label": "Query Parameters",
            "tooltip": "Query parameters in JSON format (optional)",
            "index": 5
          }
        }
      }
    }
  ],
  "outPorts": [
    {
      "name": "out",
      "options": [
        {
          "label": "Status Code",
          "value": "statusCode"
        },
        {
          "label": "Headers",
          "value": "headers",
          "schema": {
            "type": "object"
          }
        },
        {
          "label": "Response Body",
          "value": "body",
          "schema": {
            "type": "object"
          }
        },
        {
          "label": "Full Response",
          "value": "response",
          "schema": {
            "type": "object",
            "properties": {
              "statusCode": {
                "type": "number"
              },
              "headers": {
                "type": "object"
              },
              "body": {
                "type": "object"
              }
            }
          }
        }
      ]
    }
  ],
  "icon": "data:image/svg+xml;base64,"
}