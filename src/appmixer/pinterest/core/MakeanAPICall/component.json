{
    "name": "appmixer.pinterest.core.MakeanAPICall",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Performs an arbitrary authorized API call to Pinterest. This action is useful for executing operations that are not covered by the other predefined actions.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:pinterest"
    },
    "quota": {
        "manager": "appmixer:pinterest",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "endpoint": {
                        "type": "string"
                    },
                    "http_method": {
                        "type": "string"
                    },
                    "payload": {
                        "type": "object"
                    }
                }
            },
            "inspector": {
                "inputs": {
                    "endpoint": {
                        "type": "text",
                        "tooltip": "The relative endpoint path (excluding the base URL) to call. For example: 'boards', 'pins/{pin_id}', etc.",
                        "label": "Endpoint",
                        "index": 0
                    },
                    "http_method": {
                        "type": "text",
                        "tooltip": "The HTTP method to use for the call (GET, POST, PUT, PATCH, DELETE).",
                        "label": "Http Method",
                        "index": 1
                    },
                    "payload": {
                        "type": "text",
                        "tooltip": "An optional JSON payload for methods that support bodies (e.g., POST, PUT, PATCH).",
                        "label": "Payload",
                        "index": 2
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Status",
                    "value": "status",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Data",
                    "value": "data",
                    "schema": {
                        "type": "object",
                        "properties": {}
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,PD94bW"
}