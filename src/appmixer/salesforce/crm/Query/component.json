{
    "name": "appmixer.salesforce.crm.Query",
    "author": "Vladimir Talas <lades@client.io>",
    "icon": "data:image/svg+xml;base64,",
    "description": "Executes the specified SOQL query. See more in the <a href='https://developer.salesforce.com/docs/atlas.en-us.soql_sosl.meta/soql_sosl/sforce_api_calls_soql_select.htm' target='_blank'> SOQL Docs </a>.",
    "trigger": true,
    "webhook": true,
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:salesforce"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string"
                    },
                    "outputType": {
                        "type": "string"
                    }
                }
            },
            "inspector": {
                "inputs": {
                    "query": {
                        "type": "text",
                        "index": 0,
                        "label": "SQL Query",
                        "tooltip": "Enter an SOQL query. See more in the <a href='https://developer.salesforce.com/docs/atlas.en-us.soql_sosl.meta/soql_sosl/sforce_api_calls_soql_select.htm' target='_blank'> SOQL Docs </a>."
                    },
                    "outputType": {
                        "type": "select",
                        "options": [
                            {
                                "content": "All items at once",
                                "value": "array"
                            },
                            {
                                "content": "One item at a time",
                                "value": "object"
                            },
                            {
                                "content": "Save items to file",
                                "value": "file"
                            }
                        ],
                        "defaultValue": "array",
                        "index": 1,
                        "label": "Output Type",
                        "tooltip": "Choose whether you want to receive the result set as one complete list, or one row at a time or stream the rows to a file. For large datasets, streaming the rows to a file is the most efficient method."
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "source": {
                "url": "/component/appmixer/salesforce/crm/Query?outPort=out",
                "data": {
                    "properties": {
                        "generateOutputPortOptions": true
                    },
                    "messages": {
                        "in/outputType": "inputs/in/outputType"
                    }
                }
            }
        },
        {
            "name": "emptyResult",
            "options": [
                {
                    "label": "totalSize",
                    "value": "totalSize"
                },
                {
                    "label": "done",
                    "value": "done"
                },
                {
                    "label": "records",
                    "value": "records",
                    "schema": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {}
                        }
                    }
                }
            ]
        }
    ]
}
