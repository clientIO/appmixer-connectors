{
    "name": "appmixer.github.list.CreateComment",
    "author": "Appmixer <info@appmixer.com>",
    "icon": "data:image/svg+xml;base64,",
    "description": "Create a comment on an issue or PR.",
    "private": false,
    "auth": {
        "service": "appmixer:github",
        "scope": [
            "user",
            "public_repo",
            "repo",
            "notifications",
            "gist"
        ]
    },
    "quota": {
        "manager": "appmixer:github",
        "resources": "requests",
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "repositoryId": { "type": "string" },
                    "issue": { "type": "string" },
                    "body": { "type": "string" }
                },
                "required": [
                    "repositoryId",
                    "issue"
                ]
            },
            "inspector": {
                "inputs": {
                    "repositoryId": {
                        "type": "text",
                        "group": "transformation",
                        "label": "Repository",
                        "index": 1,
                        "source": {
                            "url": "/component/appmixer/github/list/ListRepos?outPort=repositories",
                            "data": {
                                "transform": "./transformers#reposToSelectArray"
                            }
                        },
                        "tooltip": "Select an Issue to update."
                    },
                    "issue": {
                        "type": "text",
                        "group": "transformation",
                        "label": "Issue",
                        "index": 2,
                        "source": {
                            "url": "/component/appmixer/github/list/ListIssues?outPort=out",
                            "data": {
                                "properties": {
                                    "repositoryId": "inputs/in/repositoryId"
                                },
                                "transform": "./transformers#issuesToSelectArray"
                            }
                        },
                        "tooltip": "Select an Issue to update."
                    },
                    "body": {
                        "type": "textarea",
                        "group": "transformation",
                        "tooltip": "Body of Comment.",
                        "label": "Body",
                        "index": 3
                    }                 
                },
                "groups": {
                    "transformation": {
                        "label": "Transformation",
                        "index": 1
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "ID", "value": "id" },
                { "label": "URL", "value": "url"},
                { "label": "Body", "value": "body" },
                { "label": "Created At", "value": "created_at" },
                { "label": "User ID", "value": "user.id" },
                { "label": "User Login", "value": "user.login" }
            ]
        }
    ]
}
