{
    "name": "appmixer.github.list.NewEvent",
    "author": "Robert Beinaravicius <rbeinaravicius@ntrc.eu>",
    "icon": "data:image/svg+xml;base64,",
    "description": "Triggered when anything happens on a repo. Note that according to the <a href'https://docs.github.com/en/rest/activity/events?apiVersion=2022-11-28#list-repository-events' target='blank'>DOCs</a>: This API is not built to serve real-time use cases. Depending on the time of day, event latency can be anywhere from 30s to 6h.",
    "private": false,
    "tick": true,
    "auth": {
        "service": "appmixer:github",
        "scope": [
            "user",
            "public_repo",
            "repo",
            "notifications",
            "gist"
        ]
    },
    "quota": {
        "manager": "appmixer:github",
        "resources": "requests",
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "outPorts": [
        {
            "name": "event",
            "options": [
                { "label": "id", "value": "id" },
                { "label": "type", "value": "type" },
                { "label": "created_at", "value": "created_at" },
                { "label": "repo.id", "value": "repo.id" },
                { "label": "repo.name", "value": "repo.name" },
                { "label": "actor.id", "value": "actor.id" },
                { "label": "actor.login", "value": "actor.login" }
            ]
        }
    ],
    "properties": {
        "schema": {
            "properties": {
                "repositoryId": {
                    "type": "string",
                    "pattern": "[^\/]+[\/][^\/]+"
                }
            },
            "required": [
                "repositoryId"
            ]
        },
        "inspector": {
            "inputs": {
                "repositoryId": {
                    "type": "select",
                    "group": "config",
                    "label": "Repository",
                    "index": 1,
                    "source": {
                        "url": "/component/appmixer/github/list/ListRepos?outPort=repositories",
                        "data": {
                            "transform": "./transformers#reposToSelectArray"
                        }
                    },
                    "tooltip": "Select a repository."
                }
            },
            "groups": {
                "config": {
                    "label": "Configuration",
                    "index": 1
                }
            }
        }
    }
}
