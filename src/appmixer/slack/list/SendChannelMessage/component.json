{
    "name": "appmixer.slack.list.SendChannelMessage",
    "author": "Robert Beinaravicius <rbeinaravicius@ntrc.eu>",
    "icon": "data:image/svg+xml;base64,",
    "description": "Post a message to a specific public channel.",
    "private": false,
    "auth": {
        "service": "appmixer:slack",
        "scope": [
            "channels:read",
            "chat:write"
        ]
    },
    "quota": {
        "manager": "appmixer:slack:list",
        "resources": "postMessage",
        "maxWait": 30000,
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "inPorts": [
        {
            "name": "message",
            "schema": {
                "type": "object",
                "properties": {
                    "channelId": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    }
                },
                "required": [
                    "channelId",
                    "text"
                ]
            },
            "inspector": {
                "inputs": {
                    "channelId": {
                        "type": "select",
                        "label": "Channel",
                        "index": 1,
                        "source": {
                            "url": "/component/appmixer/slack/list/ListPublicChannels?outPort=channels",
                            "data": {
                                "transform": "./transformers#channelsToSelectArray"
                            }
                        },
                        "attrs": {
                            "label": {
                                "data-tooltip": "Select a public channel."
                            }
                        }
                    },
                    "text": {
                        "type": "textarea",
                        "label": "Message",
                        "index": 2
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "newMessage",
            "options": [
                {
                    "label": "Message Timestamp",
                    "value": "ts",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Message Type",
                    "value": "type",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Text",
                    "value": "text",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "User",
                    "value": "user",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Bot ID",
                    "value": "bot_id",
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    ]
}