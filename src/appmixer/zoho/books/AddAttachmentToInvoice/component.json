{
    "name": "appmixer.zoho.books.AddAttachmentToInvoice",
    "author": "Jiří Hofman <jirka@client.io>",
    "description": "Attach a file to an invoice.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:zoho:books",
        "scope": [
            "ZohoBooks.invoices.CREATE"
        ]
    },
    "quota": {
        "manager": "appmixer:zoho:books",
        "resources": "requests",
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "invoice_id": { "type": "string" },
                    "organization_id": { "type": "string" },
                    "attachment": { "type": "string" },
                    "can_send_in_email": { "type": "boolean" }
                },
                "required": [
                    "invoice_id", "attachment"
                ]
            },
            "inspector": {
                "inputs": {
                    "organization_id": {
                        "type": "select",
                        "label": "Organization ID",
                        "index": 0,
                        "source": {
                            "url": "/component/appmixer/zoho/books/ListOrganizations?outPort=out",
                            "data": {
                                "transform": "./transformers#organizationsToSelectArray"
                            }
                        },
                        "attrs": {
                            "label": {
                                "data-tooltip": "Select an organization."
                            }
                        }
                    },
                    "invoice_id": {
                        "type": "text",
                        "label": "Invoice ID",
                        "index": 1,
                        "tooltip": "Type invoice ID to find an invoice."
                    },
                    "attachment": {
                        "type": "filepicker",
                        "index": 2,
                        "label": "Attachment",
                        "tooltip": "The file to be attached. Allowed Extensions: gif, png, jpeg, jpg, bmp and pdf."
                    },
                    "can_send_in_email": {
                        "type": "toggle",
                        "index": 3,
                        "label": "Can send in mail",
                        "tooltip": "True to send the attachment with the invoice when emailed."
                    }
                }
            }
        }
    ],
    "outPorts": [ "out" ],
    "icon": "data:image/svg+xml;base64,"
}
